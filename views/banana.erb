<!DOCTYPE html>

    <head>
	    <meta charset="utf-8">
	    <title>CSV Report Home</title>
	    <link rel="stylesheet" href="styles.css">
    </head>
    
    <body>

    	<div id="wrapper">

    		<div class="header">
    			<h3>CSV Stop</h3>
    		</div>

			<form class="searchForm">
				<label>Enter an account</label>
				<p><input type = "text" name = "whoWeWant"></p>
				<p><input type = "submit"></p>
			</form><br><br>

			<form action="/login" method="get" class="homeLoginForm">
				<label>Please enter your user ID:</label>
				<p><input type="text" name="userID"></p>

				<label>Please enter your password:</label>
				<p><input type="password" name="password"></p>

				<input type="submit" class="submitButton">
			</form>


			<div class="reportLinks">
				<a href="/fullreport">Both</a>
				<a href="/fullreport?whoWeWant=Priya">Priya only</a>
				<a href="/fullreport?whoWeWant=Sonia">Sonia only</a>
			</div>

			<br>
			<div class="reportTable">
				<% @passHash.each do |name, balance| %>
					<h4>Account:  <%= name %> &emsp; Balance: $<%= balance[:total].round(2) %></h4>
					<table>
						
						<tr>
							<th>Category</th>
							<th>Amount</th>
							<th>Average per transaction</th>
						</tr>
					<% balance[:category].each do |category, t| %>
						<tr>
							<td><%= category %></td>	
							<td><%= t[:tally].round(2) %></td>
							<td><%= t[:avg_transaction].round(2) %></td>
						</tr>
					<% end %>
					</table>
					<br>
				<% end %>
			</div>
		</div>
	</body>